    rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">


  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.2.0/dist/css/datepicker-bs5.min.css">

  <link rel="stylesheet" href="./assets/style/all.css">
</head>

<body>
  <nav class="navbar navbar-expand-xl navbar-dark bg-dark nav-border">
    <div class="container justify-content-between">
      <a class="navbar-brand " href="index.html">
        <img class="nav-logo" src="assets/images/logo.svg" alt="logo">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav  mb-2 mb-xl-0 text-center">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="index.html">首頁</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="class.html">課程介紹</a>
          </li>
          <li class="nav-item">
            <a class="nav-link d-flex justify-content-center align-items-center" href="#" aria-disabled="true"
              data-bs-toggle="modal" data-bs-target="#loginModal">
              <span class="material-icons">
                account_circle
              </span>
              登入</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <%- contents %>

    <!-- footer -->
    <footer class="container-fluid bg-dark-1a">
      <p class="py-3 mb-0 font-azeret fs-10 text-center text-gray-90">Coding Home © 2022 All Rights Reserved</p>
    </footer>

    <!-- modals here -->
    <!-- login modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content bg-dark-2d border border-white rounded-0 text-white">
          <div class="container">

            <div class="position-relative ">
              <button class="login__close login__btn__close btn p-0" type="button" data-bs-dismiss="modal"
                aria-label="Close">
                <span class="material-icons">
                  close
                </span>
              </button>
            </div>
            <h5 class="modal-title text-center fs-4 lh-base fw-bold mb-4 mb-xl-0 mt-xl-4" id="loginModalLabel">登入</h5>
          </div>

          <div class="row justify-content-center">
            <div class="col-xl-8">

              <div class="modal-body px-4 py-0 pb-6">
                <form>
                  <div class=" mb-3">
                    <label for="loginInputEmail1" class="form-label text-gray-c1">信箱</label>
                    <input type="email" class="login__input form-control" id="loginInputEmail1" placeholder="請輸入信箱"
                      aria-describedby="emailHelp">
                  </div>
                  <div class=" mb-3">
                    <label for="loginInputPassword" class="form-label text-gray-c1">密碼</label>
                    <input type="password" class="login__input form-control" id="loginInputPassword"
                      placeholder="請輸入密碼">
                  </div>
                  <a href="order-1.html" class="btn-gradient btn btn-primary w-100 fs-7 mb-4 mb-xl-6">登入</a>
                  <div class="text-center mb-3">
                    <span class="login__subtext text-gray-c1">其他登入方式</span>
                  </div>
                  <a href="order-1.html" class="btn btn-dark border-white w-100 mb-3">
                    <img class="icon-24 me-5" src="assets/images/icon_fb.svg" alt="fb login">Facebook 登入
                  </a>
                  <a href="order-1.html" class="btn btn-dark border-white w-100">
                    <img class="icon-24 me-5" src="assets/images/icon_google.svg" alt="fb login">Google 登入
                  </a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    </div>


    <script src="./assets/js/vendors.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.2.0/dist/js/datepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.2.0/dist/js/locales/zh-TW.js"></script>
    <script src="./assets/js/all.js"></script>
</body>

</html>